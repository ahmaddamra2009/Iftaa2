@model User
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form method="post" asp-action="Login">
    <table class="table table-bordered">
        <tr>
            <td><label asp-for="UserName"></label> </td>
            <td><input asp-for="UserName" class="form-control" />  
            <span class="text-danger" asp-validation-for="UserName"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="Password"></label> </td>
            <td>
                <input asp-for="Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Password"></span>

            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" name="name" value="Login" class="btn btn-success" />
                Not Register yet?     <a asp-action="Register">Register</a>
                <br />
                <span class="text-danger">
                    @ViewBag.err
                </span>
            </td>
        </tr>
    </table>
</form>

@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}